  "bugs": {
    "type": "git",
    "url": "https://github.com/arloliu/buffer-plus/issues"
  },
  "homepage": "https://github.com/arloliu/buffer-plus",
  "scripts": {
    "test": "mocha",
    "coverage": "NODE_ENV=test nyc mocha",
