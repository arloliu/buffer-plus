    "benchmark": "^2.1.4",
    "chai": "^4.1.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.13.0",
    "eslint-config-google": "^0.12.0",
    "mocha": "^7.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.2.0",
    "prettier-eslint": "^9.0.1",
    "schemapack": "^1.4.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
